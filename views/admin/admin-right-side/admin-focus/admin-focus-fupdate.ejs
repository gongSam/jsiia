<div class="admin-subbody">
    <div class="panel panel-primary">
        <div class="panel-heading">
            <h3 class="panel-title">热点关注</h3>
        </div>
        <div class="panel-body">
            <form id="defaultform" role="form" method="post" enctype="application/json" action="/admin/admin-focus/<%= focusone._id %>/fupdate">
                <div class="form-group">
                    <label>热点关注名</label>
                    <input class="form-control" placeholder="请输入热点关注名" type="text" name="ftitle"
                           value=<%= focusone.ftitle %>>
                </div>

                <div class="form-group">
                    <label>月份</label>
                    <input class="form-control" placeholder="请输入月份" type="text" name="fmonth"
                           value=<%= focusone.fmonth %>>
                </div>

                <div class="form-group">
                    <label>天数</label>
                    <input class="form-control" placeholder="请输入天数" type="text" name="fday"
                           value=<%= focusone.fday %>>
                </div>

                <div class="form-group">
                    <label>天数</label>
                    <input class="form-control" placeholder="请输入哪年" type="text" name="fyear"
                           value=<%= focusone.fyear %>>
                </div>

                <div class="form-group">
                    <label>法律法规内容</label>

                    <textarea id="container"  class="admin-modal-container" name="fbio"
                              type="text/plain"> <%- focusone.fbio %></textarea>
                </div>
                <input type="submit" class="btn  btn-primary" value="修改">
            </form>
        </div>
        <!--<script type="text/javascript" src="../public/javascripts/update.js">-->
        <script type="text/javascript">
            $('#myModal').modal('show')
            var ue = UE.getEditor('container');
        </script>
    </div>
</div>

